import React from 'react';
function App() {
  return (
    <div style={{ textAlign: 'center', marginTop: '100px' }}>
      <h1>ðŸš€ React App Dockerized with Multi-Stage Build</h1>
      <p>This React app is running inside a lightweight Nginx container!</p>
    </div>
  );
}
export default App;

# =================== Dockerfile ===================
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

